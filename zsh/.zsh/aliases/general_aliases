alias ls='ls -al'
alias vi='nvim'
alias vim='nvim'


# Git aliases
alias g='git'
alias gs='git status'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gbD='git branch -D'
alias gc='git commit -v'
alias gcb='git checkout -b'
alias gd='git diff'
alias gp='git pull'
alias ggpull='git pull origin "$(git_current_branch)"'
alias ggpush='git push origin "$(git_current_branch)"'
